<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cl_main"
    android:orientation="vertical"
    tools:context=".IzbrannoeActivity">


    <LinearLayout
        android:id="@+id/ll_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/imageView_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:background="@drawable/bt_back"
        />

    <TextView
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowColor="@color/shadowColor"
        android:shadowRadius="1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        style="@style/TextStyle_EditActivity"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="@string/izbrannoe"
        android:textColor="@color/color_text_users_usersFavorite" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/cl_main"
        app:layout_constraintTop_toBottomOf="@id/ll_menu">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_list_contact_izbrannoe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>